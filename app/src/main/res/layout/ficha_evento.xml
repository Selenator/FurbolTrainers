<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/icono_evento_escudo"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <ImageView
                android:id="@+id/icono_evento"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.6"
            android:orientation="vertical">

            <TextView
                android:id="@+id/evento_nombre_equipo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="2dp"
                android:paddingLeft="10dp"
                android:paddingStart="10dp"
                android:text="Osasuna"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/evento_localizacion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingStart="10dp"
                android:text="Campo Osasuna"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/evento_tipo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingStart="10dp"
                android:text="Partido"
                android:textSize="14sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/evento_fecha"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10/10/17" />

                <ImageView
                    android:layout_width="@dimen/fecha_hora_icon"
                    android:layout_height="@dimen/fecha_hora_icon"
                    android:layout_gravity="center"
                    android:layout_marginLeft="7dp"
                    app:srcCompat="@drawable/ic_calendar" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/evento_hora"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="99:99" />

                <ImageView
                    android:layout_width="@dimen/fecha_hora_icon"
                    android:layout_height="@dimen/fecha_hora_icon"
                    android:layout_gravity="center"
                    android:layout_marginLeft="7dp"
                    app:srcCompat="@drawable/ic_clock" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/expandible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:descendantFocusability="blocksDescendants"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:id="@+id/comentario_evento"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="waka"
            android:textAlignment="center"
            android:visibility="gone" />

        <com.google.android.gms.maps.MapView
            android:id="@+id/mapview"

            android:layout_width="fill_parent"
            android:layout_height="250dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginEnd="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginStart="20dp"
            android:clickable="true"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/botones_opciones"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            android:orientation="horizontal"
            android:visibility="gone">

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/editar_but"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                app:srcCompat="@drawable/ic_edit" />

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/eliminar_but"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                app:srcCompat="@drawable/ic_delete" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>


