<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:orientation="horizontal"
    android:padding="2dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">
        <ImageView
            android:id="@+id/icono_evento_escudo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:srcCompat="@android:drawable/sym_def_app_icon" />
        <ImageView
            android:id="@+id/icono_evento"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:srcCompat="@android:drawable/sym_def_app_icon" />

    </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.6"
            android:orientation="vertical">

            <TextView
                android:id="@+id/evento_nombre_equipo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="2dp"
                android:paddingLeft="10dp"
                android:paddingStart="10dp"
                android:text="Osasuna"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/evento_localizacion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingStart="10dp"
                android:text="Campo Osasuna"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/evento_tipo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingStart="10dp"
                android:text="Partido"
                android:textSize="14sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/evento_fecha"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10/10/17" />

                <ImageView
                    android:layout_width="@dimen/fecha_hora_icon"
                    android:layout_height="@dimen/fecha_hora_icon"
                    android:layout_gravity="center"
                    android:layout_marginLeft="7dp"
                    android:src="@drawable/ic_calendar" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/evento_hora"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="99:99" />

                <ImageView
                    android:layout_width="@dimen/fecha_hora_icon"
                    android:layout_height="@dimen/fecha_hora_icon"
                    android:layout_gravity="center"
                    android:layout_marginLeft="7dp"
                    android:src="@drawable/ic_clock" />

            </LinearLayout>

        </LinearLayout>

</LinearLayout>


